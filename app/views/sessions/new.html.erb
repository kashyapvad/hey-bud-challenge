<!-- app/views/sessions/new.html.erb -->
<h1>Log In</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit 'Log In' %>
  </div>
<% end %>

<p>Don't have an account? <%= link_to 'Sign Up', signup_path %></p>
